<html>
  <head>
    <title>Add Review</title>
  </head>
  <body>
    <h1>Add Review</h1>
    <form method="post" action="">
      <div>
        <label for="bathroom">Bathroom</label>
        <input
          type="text"
          id="bathroom"
          name="bathroom"
          required
          minlength="3"
          maxlength="50"
        />
      </div>
      <div>
        <label for="review">Review</label>
        <textarea id="review" name="review" maxlength="500"></textarea>
      </div>
      <div>
        <label for="rating">Rating</label>
        <input
          type="number"
          id="rating"
          name="rating"
          required
          min="1"
          max="5"
        />
      </div>
      <input type="submit" value="Add" />
    </form>
  </body>
</html>